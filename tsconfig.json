{
  "include": ["."],
  "exclude": ["src"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "incremental": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
